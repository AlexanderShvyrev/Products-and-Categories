@model Product


<div class="jumbotron m-5 col-7 pl-5">
    <a href="/" class="btn btn-info">Back</a>
    <a href="/categories" class="btn btn-info">Categories</a>
    <h3>Add a new Product</h3>
</div>




<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <form class="col-5" asp-action="Create" method="post">
    <div class="form-group">
        <span style="color:red;" asp-validation-for="PName"></span>
        <label asp-for="PName"></label>
        <input asp-for="PName" class="form-control">
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="PDescription"></span>
        <label asp-for="PDescription"></label>
        <textarea class="form-control" asp-for="PDescription" rows="4" cols="50"></textarea><br>
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Price"></span>
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" class="form-control">
    </div>
    <input type="submit" class= "btn btn-info" value="Create">

</form>
</div>
            <div class="col-lg-6">
                <h1>Existing Products</h1>
                
                @foreach (var item in ViewBag.AllProducts)
                {
                    <p> <a href="/product/@item.ProductId">@item.PName</a></p>
                }
                
            </div>
        </div>
    </div>
</div>